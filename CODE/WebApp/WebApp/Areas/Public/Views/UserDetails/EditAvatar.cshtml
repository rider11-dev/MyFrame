@{
    var imgSrc = ViewData["imgSrc"];
}
<link href="~/libs/plugins/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
<link href="~/libs/plugins/Jcrop-1902/css/jquery.Jcrop.min.css" rel="stylesheet" />
<style type="text/css">
    #preview-container {
        width: 100px;
        height: 100px;
        overflow: hidden;
    }
</style>

<div id="editavatar-container">
    <div>
        <div id="src-container" style="width: 300px; height: 300px; float: left;">
            <img src="@imgSrc" alt="原始图片" id="img-headSrc" style="width: 100%; height: 100%;" />
        </div>
        <div style="float: left;">
            <div id="preview-container" style="margin-top: 200px; margin-left: 2px;">
                <img src="@imgSrc" id="img-headPreview" alt="头像预览" />
            </div>
        </div>
    </div>
    <div style="clear:both"></div>

    <div>
        <button id="btn_uploadFile" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-import" aria-hidden="true"></span>选择图片
        </button>
        <button id="btn_uploadHead" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-export" aria-hidden="true"></span>上传头像
        </button>
    </div>

    <form>
        <div class="modal fade" id="modal_UploadFile" tabindex="-1" role="dialog" aria-labelledby="modalLabel_UploadFile">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="modalLabel_UploadFile">请选择图片</h4>
                    </div>
                    <div class="modal-body">
                        <input type="file" name="input_uploadFile" id="input_uploadFile" class="file-loading" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/libs/plugins/bootstrap-fileinput/js/fileinput.min.js"></script>
<script src="~/libs/plugins/bootstrap-fileinput/js/locales/zh.js"></script>
<script src="~/libs/plugins/Jcrop-1902/js/jquery.Jcrop.min.js"></script>
<script src="~/libs/app/userdetails/FileUpload.js"></script>
<script src="~/libs/app/userdetails/ImageCrop.js"></script>
<script src="~/libs/app/userdetails/editavatar.js"></script>

<script type="text/javascript">
    $(function () {
        avatar.init({
            urlUpload: "@Url.Action("UploadFile")" + "?folder=head",
            urlCutAvatar: "@Url.Action("CutAvatar")"
        });
    });
</script>