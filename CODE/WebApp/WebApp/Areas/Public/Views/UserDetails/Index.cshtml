@using WebApp.Core.ViewModel
@model UserDetailsViewModel
<link href="~/libs/plugins/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<div class="row" style="margin:10px 0px;">
    <div class="col-xs-12">
        <div class="box" style="min-height:400px;">
            <div class="box-body">
                @using (Html.BeginForm("Save", "UserDetails", new { Area = "Public" }, FormMethod.Post, new { @class = "container form-horizontal", id = "editForm_UserDetails", style = "max-width: 800px;" }))
                {
                    <div style="overflow-y: scroll;width:100%; height: 460px; ">
                        <div style="width:95%">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(u => u.Id)
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.UserName, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.UserName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.NickName, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.NickName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.NickName)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.Email, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.HeadImage, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @*@Html.HiddenFor(u => u.HeadImage)*@
                                    @Html.TextBoxFor(u => u.HeadImage, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.BirthDate, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    <div class="input-group date" id="date-birthday">
                                        @Html.TextBoxFor(u => u.BirthDate, new { @class = "form-control" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(u => u.BirthDate)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.Age, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.Age, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Age)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.Telephone, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.Telephone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Telephone)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.Address, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Address)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.Interests, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(u => u.Interests, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Interests)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(u => u.PersonalNote, new { @class = "control-label pull-right" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextAreaFor(u => u.PersonalNote, 6, 10, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.PersonalNote)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container" style="margin-top:20px;max-width:120px;">
                        <button id="btnSaveUsrDetails" class="btn btn-primary btn-block" type="submit">保存</button>
                    </div>
                }
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
            </div>
        </div>
    </div>
</div>
<script src="~/libs/app/userdetails/index.js"></script>
<script type="text/javascript">
    $(function () {
        idxUsrDetails.init({});
    });
</script>