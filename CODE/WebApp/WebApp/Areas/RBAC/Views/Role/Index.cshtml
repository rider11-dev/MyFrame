<div class="row" style="margin-top:10px;">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">角色管理</h3>
            </div>
            <div class="box-body">
                <div id="toolbar" class="container" style="margin:4px 0px;">
                    <div class="row">
                        <div class="col-sm-3 btn-group">
                            <button id="btnAdd" type="button" class="btn btn-success">
                                <span class="glyphicon glyphicon-plus">新增</span>
                            </button>
                            <button id="btnEdit" type="button" class="btn btn-success">
                                <span class="glyphicon glyphicon-edit">修改</span>
                            </button>
                            <button id="btnDelete" type="button" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove">删除</span>
                            </button>
                        </div>
                        <div class="col-sm-2" style="padding:0px;">
                            <input type="text" id="txtSearchRoleName" name="UserName" class="form-control" placeholder="角色名" />
                        </div>
                        <div class="col-sm-1" style="padding-left:2px;">
                            <button id="btnSearch" type="button" class="btn btn-success">
                                <span class="glyphicon glyphicon-search">查询</span>
                            </button>
                        </div>
                    </div>
                </div>
                <table id="grid" class="table table-bordered table-striped table-hover" cellspacing="0"></table>
            </div>
        </div>
    </div>
</div>
<script src="~/libs/rbac/role/index.js"></script>
<script type="text/javascript">
    $(function () {
        roles.init({
            urlAdd: "@Url.Action("Add")",
            urlEdit: "@Url.Action("Edit")",
            urlSearch: "@Url.Action("GetRoleFullInfoByPage")",
            urlDelete: "@Url.Action("Delete")"
        });
    });
</script>