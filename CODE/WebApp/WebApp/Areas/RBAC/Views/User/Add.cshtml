@using MyFrame.RBAC.ViewModel
@model UserViewModel
<link href="~/libs/plugins/iCheck/square/blue.css" rel="stylesheet" />
@Html.HiddenFor(m => m.Id)
<div id="form-add-user">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label pull-right" })
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.Email, new { @class = "control-label pull-right" })
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.Enabled, new { @class = "control-label pull-right" })
        </div>
        <div class="checkbox icheck col-sm-8">
            @Html.CheckBoxFor(m => m.Enabled, new { @class = "myCheck" })
        </div>
    </div>
</div>
<script>
    $(function () {
        gFunc.setCheckBoxStyle('input.myCheck');
    });
</script>