@using WebApp.ViewModels.RBAC
@using System.Text
@{
    var moduleList = ViewData["ModuleTreeData"] as List<ModuleVM>;
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/libs/AdminLTE/img/user2-160x160.jpg" class="img-circle" alt="用户头像" />
            </div>
            <div class="pull-left info">
                <p>张鹏飞</p>
                <a href="#"><i class="fa fa-circle text-success"></i>在线</a>
            </div>
        </div>
        <!-- 搜索框 -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- 工具栏: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">导航</li>
            <li class="active">
                <a href="#"><i class="fa fa-home"></i><span>主页</span></a>
            </li>
            @{
                Action<ModuleVM, StringBuilder> actionFormatTreeMenu = null;
                actionFormatTreeMenu = (m, sb) =>
                {
                    if (m == null)
                    {
                        return;
                    }
                    sb.AppendFormat("<li {0}>", m.HasChild ? "class='treeview'" : "");
                    sb.AppendFormat("<a href='{0}'><i class='fa {1}'></i><span>{2}</span></a>", string.IsNullOrEmpty(m.LinkUrl) ? "#" : (Request.ApplicationPath + m.LinkUrl), m.Icon, m.Name);
                    if (m.SubModules != null && m.SubModules.Count() > 0)
                    {
                        sb.AppendFormat("<ul class='treeview-menu'>");
                        foreach (var mSub in m.SubModules)
                        {
                            actionFormatTreeMenu(mSub, sb);
                        }
                        sb.AppendFormat("</ul>");
                    }
                    sb.AppendFormat("</li>");
                };
                StringBuilder sbHtml = new StringBuilder();
                foreach (var item in moduleList)
                {
                    actionFormatTreeMenu(item, sbHtml);
                }
                @Html.Raw(sbHtml.ToString());
            }
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>